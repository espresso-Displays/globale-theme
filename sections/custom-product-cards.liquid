{% schema %}
{
  "name": "Product Cards",
  "tag": "section",
  "class": "product-cards-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Product Name"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Product description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Cards",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "espresso Pro",
            "subtitle": "Pro display for a serious workflow.",
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "espresso Touch",
            "subtitle": "Sleek design with touchscreen.",
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "espresso Display",
            "subtitle": "Simple, seamless for daily performance.",
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="content bg-lm-background-1 text-lm-on-background-1 flex flex-col">
  <div class="signup flex flex-col justify-center items-center bg-lm-background-2 h-screen">
    <div class="max-w-[500px] flex flex-col items-center">
      <svg style="display: none">
        <symbol id="icon-error" viewBox="0 0 13 13">
          <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
          <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
          <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
          <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
        </symbol>
      </svg>
      <h1 class="text-display-medium text-lm-on-background-2 mb-[20px]">Sign up to espresso</h1>
      {%- form 'create_customer', novalidate: 'novalidate', class: 'w-full gap-4' -%}
        {%- if form.errors -%}
          <div class="mb-4">
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#RegisterForm-{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
        <div class="field flex flex-col gap-4 mb-4">
          <label class="hidden" for="RegisterForm-FirstName">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input
            type="text"
            class="text-body-small w-full text-[14px] rounded p-[10px] border-[1px]"
            name="customer[first_name]"
            id="RegisterForm-FirstName"
            {% if form.first_name %}
              value="{{ form.first_name }}"
            {% endif %}
            autocomplete="given-name"
            placeholder="{{ 'customer.register.first_name' | t }}"
          >
        </div>
        <div class="field mb-4">
          <label class="hidden" for="RegisterForm-LastName">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input
            type="text"
            class="text-body-small w-full text-[14px] rounded p-[10px] border-[1px]"
            name="customer[last_name]"
            id="RegisterForm-LastName"
            {% if form.last_name %}
              value="{{ form.last_name }}"
            {% endif %}
            autocomplete="family-name"
            placeholder="{{ 'customer.register.last_name' | t }}"
          >
        </div>
        <div class="field mb-4">
          <label class="hidden" for="RegisterForm-email">
            {{ 'customer.register.email' | t }}
          </label>
          <input
            type="email"
            class="text-body-small w-full text-[14px] rounded p-[10px] border-[1px]"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %}
              value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-email-error"
            {% endif %}
            placeholder="{{ 'customer.register.email' | t }}"
          >
        </div>
        {%- if form.errors contains 'email' -%}
          <div id="RegisterForm-email-error" class="form__message mb-2">
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}.
          </div>
        {%- endif -%}
        <div class="field mb-4">
          <label class="hidden" for="RegisterForm-password">
            {{ 'customer.register.password' | t }}
          </label>
          <input
            type="password"
            class="text-body-small w-full text-[14px] rounded p-[10px] border-[1px]"
            name="customer[password]"
            id="RegisterForm-password"
            aria-required="true"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-password-error"
            {% endif %}
            placeholder="{{ 'customer.register.password' | t }}"
          >
        </div>
        {%- if form.errors contains 'password' -%}
          <div id="RegisterForm-password-error" class="form__message mb-2">
            {{ form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password }}.
          </div>
        {%- endif -%}
        <div class="checkbox-group mb-4">
          <div class="checkbox-input">
            <input type="checkbox" id="toggle" name="terms-checkbox"
            ><label for="toggle" class="pl-[10px]"
              >I have read and agree to espressoâ€™s &nbsp;<a
                class="text-lm-primary underline"
                href="https://espres.so/policies#TermsAndConditions"
                target="_blank"
                >Terms of Service</a
              >&nbsp; and &nbsp;<a
                class="text-lm-primary underline"
                href="https://espres.so/policies#PrivacyPolicy"
                target="_blank"
                >Privacy Policy</a
              ></label
            >
          </div>
        </div>

        <button class="rounded-[5px] flex flex-row text-center items-center justify-center gap-[16px] bg-lm-primary text-lm-on-primary hover:bg-lm-primary-hover active:bg-lm-primary-click w-full h-[48px] text-label-large cursor-pointer btn-submit">
          Sign up
        </button>
      {%- endform -%}
    </div>
    <div class="no-account mt-10">
      <p>Already have an account? <a href="/account/login" class="underline text-lm-primary">Sign in</a></p>
    </div>
  </div>
</div>

<script>
  const submitBtn = document.querySelector('.btn-submit');
  const terms = document.querySelector("input[name='terms-checkbox']");
  const registerForm = document.getElementById('create_customer');
  submitBtn.addEventListener('click', (e) => {
    e.preventDefault();
    if (terms.checked !== true) {
      //alert('You have to agree to the terms of service');
    } else {
      registerForm.submit();
    }
  });
</script>

{% schema %}
{
  "name": "t:sections.main-register.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

<div id="section-faqs" class="section relative flex lg:flex-col items-center flex-col-reverse w-full h-full">
  <div class="section-layout w-full h-full max-w-content-max-width flex flex-col items-center px-[32px] lg:px-[70px] bg-lm-background-0 text-lm-on-background-0 py-[24px] lg:pt-[32px] lg:pb-[64px]">
    <div class="content-block w-full h-full">
      <div
        id=""
        class="layout-grid relative h-full col-span-4 lg:col-span-12 grid grid-cols-4 lg:grid-cols-12 auto-rows-max gap-x-[8px] lg:gap-x-[20px]"
      >
        <div
          id=""
          class="layout-grid relative h-full col-span-4 lg:col-span-12 grid grid-cols-4 lg:grid-cols-12 auto-rows-max gap-x-[8px] lg:gap-x-[20px] bg-lm-background-2 text-lm-on-background-2 rounded-lg py-[24px] lg:pt-[64px] lg:pb-[64px]"
        >
          <div
            id=""
            class="layout-flex relative h-full col-span-4 flex flex-col lg:col-start-2 lg:col-span-10 gap-[32px] lg:gap-[64px]"
          >
            <h2 class="text-heading-large text-center">FAQs</h2>
            <div class=" text-body-large  border-b border-[#D9D9D9] px-[20px] lg:px-[0px]">
              <div class="faq-section">
                {% comment %}
                  {% for faq in faqs %}
                    <div class="faq-item">
                      {% render 'pdp-accordion', index: forloop.index0, title: faq.question, description: faq.answer %}
                    </div>
                  {% endfor %}
                {% endcomment %}

                {% for block in section.blocks %}
                  <div class="faq-item">
                    {% render 'pdp-accordion',
                      index: forloop.index0,
                      title: block.settings.question,
                      description: block.settings.answer
                    %}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Explore FAQs",
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Explore FAQs"
    }
  ]
}
{% endschema %}
